# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL database connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Production: Use connection pooling (PgBouncer recommended)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/pos_db"

# ========================================
# AUTHENTICATION (NextAuth.js)
# ========================================
# CRITICAL: Generate a secure random secret for production
# Generate using: openssl rand -base64 32
# NEVER commit the actual secret to version control
NEXTAUTH_SECRET="REPLACE_WITH_SECURE_RANDOM_STRING_MIN_32_CHARS"

# The canonical URL of your application
# Production example: https://pos.yourdomain.com
NEXTAUTH_URL="http://localhost:3000"

# ========================================
# STRIPE PAYMENT PROCESSING (Optional)
# ========================================
# Get keys from: https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_...) for development
# Use live keys (sk_live_...) for production only
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ========================================
# EMAIL SERVICE (Resend) (Optional)
# ========================================
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# ========================================
# AWS S3 STORAGE (Optional)
# ========================================
# For product images, receipts, reports
# Get credentials from AWS IAM console
AWS_S3_BUCKET="your-bucket-name"
AWS_S3_REGION="us-east-1"
AWS_ACCESS_KEY_ID="AKIA..."
AWS_SECRET_ACCESS_KEY="..."

# ========================================
# APPLICATION SETTINGS
# ========================================
# Node environment: development | production | test
NODE_ENV="development"

# Enable debug logging (true/false)
DEBUG_MODE="false"

# Application domain (for CORS, cookies, etc.)
APP_DOMAIN="yourdomain.com"

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB="10"

# ========================================
# SECURITY SETTINGS
# ========================================
# Rate limiting: requests per minute per IP
RATE_LIMIT_REQUESTS_PER_MINUTE="100"

# Session timeout in seconds (default: 24 hours)
SESSION_TIMEOUT_SECONDS="86400"

# ========================================
# MONITORING & LOGGING (Optional)
# ========================================
# Sentry DSN for error tracking
SENTRY_DSN=""

# Log level: error | warn | info | debug
LOG_LEVEL="info"

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/disable features without code deployment
FEATURE_ENABLE_2FA="false"
FEATURE_ENABLE_EMAIL_RECEIPTS="false"
FEATURE_ENABLE_SMS_NOTIFICATIONS="false"